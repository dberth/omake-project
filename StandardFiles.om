.PHONY: configure-file
configure-file:
	echo $'''#! /bin/sh

prefix=

while :; do
	case $1 in
		--prefix=?*)
			prefix=${1#*=}
			;;
		*)
			break
	esac

	shift
done

omake --configure -s prefix=${prefix}
''' > configure
	chmod a+x configure
